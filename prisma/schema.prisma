generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROOMTYPE {
  WHITEBOARD
  TEXTEDITOR
  CODEEDITOR
  TODO
  CHAT
}

model Room {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId String
  name    String
  type    ROOMTYPE
  users   String[]

  createdAt DateTime @default(now())
}
